@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        
        <h2 class="text-danger">Error</h2>
        <h3 class="text-danger">An error occurred while processing your request.</h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="lead">@Html.Raw(Model.ErrorMessage)</p>
        }

        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        @if (!string.IsNullOrEmpty(Model.ReferrerLink))
        {
            <p>
                <a href="@Model.ReferrerLink" class="btn btn-primary">Go back to the previous page</a>
            </p>
        }
    </div>
</div>
